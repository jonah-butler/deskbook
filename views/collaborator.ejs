<%- include ('partials/header') %>
<div class="container padding-sm-top padding-sm-right padding-sm-bottom">
	<div class="row">

<div class="col-md-10">
<h1 class="jumbo-header">
	Modify Collaborators for <%= category.title %>
</h1>

  <form action="/category/<%= category._id %>/collaborators/" method="POST" onkeypress="formReturnDisabled(event)">

		<div class="form-group">
			<div class="tag-input-container-large">
				<div class="headline">
					Add a teammate to collaborate on this private category
				</div>
				<div style="visibility: hidden;" class="checkbox">
				<label><input checked type="checkbox" name="entry[user]" value="<%= category.owner._id %>"><%= category.owner.username %></label>
				</div>
			<div class="container-checkbox">
				<% users.forEach(singleUser => { %>
					<% if(singleUser.username != category.owner.username){ %>
				<div class="checkbox">
					<% if(category.user.indexOf(singleUser.id) == -1) { %>
  				<label><input type="checkbox" name="entry[user]" value="<%= singleUser._id %>"><%= singleUser.username %></label>
					<% } else { %>
						<label><input checked type="checkbox" name="entry[user]" value="<%= singleUser._id %>"><%= singleUser.username %></label>
					<% } %>
					</div>
				<% } else { %>
					<div class="checkbox">
					<label><input checked disabled type="checkbox" name="entry[user]" value="<%= singleUser._id %>"><%= singleUser.username %></label>
					</div>
				<%	} %>
				<% }) %>
			</div>
			</div>
		</div>
		<div class="form-group">
			<button class="button-main">
				Submit
			</button>
		</div>
  </form>


<%- include ('partials/footer') %>
