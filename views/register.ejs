<%- include ('partials/unauthenticated-header') %>



<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 class="jumbo-header">Please Register</h1>
      <p></p>
      <!-- <a href="/entries/new"><button class="button-main">Add A New FAQ</button></a> -->
    </div>
  </header>
</div>

<div class="container center-block">
  <form action="/register" method="post" style="max-width: 300px; margin: 0 auto; background-color: #eeeeee; padding: 40px 20px; border-radius: 5px;">
    <div class="form-group">
      <label for="formGroupExampleInput">Username</label>
      <input type="text" class="form-control" id="formGroupExampleInput" placeholder="username" name="username">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Email</label>
      <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="email" name="email">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Password</label>
      <input type="password" class="form-control" id="formGroupExampleInput3" placeholder="password" name="password">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Is Admin?</label>
      <div class="radio-inline">
        <input type="radio" name="adminradio" value="true">Yes
      </div>
      <div class="radio-inline">
        <input type="radio" name="adminradio" value="false">No
      </div>
    </div>
    <button class="button-main">Submit</button>
  </form>
</div>
